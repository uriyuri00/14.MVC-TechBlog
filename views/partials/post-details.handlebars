    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/dashboard/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <h5>Posted by {{user.name}} on {{format_date}}  </h5>
        <p>{{ text }}</p>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}